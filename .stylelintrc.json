{
	"extends": "stylelint-config-standard",
	"overrides": [
		{
			"files": ["**/*.vue"],
			"extends": "stylelint-config-standard-vue"
		}
	],
	"rules": {
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": ["deep", "slotted"]
			}
		],
		"color-hex-length": null,
		"no-descending-specificity": null
	}
}
